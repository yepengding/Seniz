system Transaction() over TransactionVar {

    init { status: 0 } -> PayGas() pending
    pending -> Proceed() success -> Notify() notified
    pending -> Cancel() dropped

    dropped -> Notify() notified

    pending = {
        status: 1
    }

    success = {
        status: 2
    }

    dropped = {
        status: 3
    }

    notified = {
        status: 4
    }
}

varset TransactionVar {
    status :: int
}