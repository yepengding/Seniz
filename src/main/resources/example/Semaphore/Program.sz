import SharedVars

system Program() over Vars with SharedVars {

    init plain -> wait
    wait -> wait [s > 0] -> @decreaseS critical
    critical -> @increaseS plain

    plain = {
        loc: 1
    }

    wait = {
        loc: 2
    }

    critical = {
        loc: 3
    }

    @increaseS = {
        s: s + 1
    }

    @decreaseS = {
        s: s - 1
    }

    prop isInCritical {
        loc = 3
    }

}

varset Vars {
    loc :: int
}